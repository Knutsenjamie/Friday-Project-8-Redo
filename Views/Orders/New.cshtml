<h1>Add a new Order For @Model.VendorsName</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorsId" name="vendorsId" type="hidden" value="@Model.Id">
  <label for="ordersTitle">Order Title</label>
  <input id="ordersTitle" name="ordersTitle" type="text">
  <label for="ordersDescription">Order's Description</label>
  <input id="ordersDescription" name="ordersDescription" type="text">
  <label for="ordersDate">Date:</label>
  <input id="ordersDate" name="ordersDate" type="text">
  <label for="ordersPrice">Total Cost:</label>
  <input id="ordersPrice" name="ordersPrice" type="text">
  <button type='submit'>Add Order</button>
</form>